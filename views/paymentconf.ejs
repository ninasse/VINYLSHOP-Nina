<%- include ("header.ejs") %>
<%- include ("navbar.ejs") %>
<main>
    <div class="container">
        <div class="pageheadline">
            <h1 class="my-3">Tack <%= order.customerId.firstName %>!</h1>
            <h3>Din order är nu betald.</h3>

        </div>
        <div>
            <div><b>Ordernummer: <%= order._id%></b></div>
            <div><b>Beställda produkter</b></div>
            <% order.orderItems.forEach( (product)=> { %>
            <div> Artikelnummer: <%= product.productId %></div>
            <% }) %>
            <div><b>Leveransuppgifter:</b></div>
            <div><%= order.customerId.firstName %> <%= order.customerId.lastName %></div>
            <div><%= order.customerId.address %></div>
            <div><%= order.customerId.email %></div>
        </div>
        <form class="startbuttons" method="get">
            <button type="submit" formaction="<%=ROUTE.index%>">HEM</button>
            <button type="submit" formaction="<%=ROUTE.gallery%>">WEBSHOP</button>
            <% if (token) { %>
            <button type="submit" formaction="<%=ROUTE.userAccount%>">MIN PROFIL</button>
            <button type="submit" formaction="<%=ROUTE.admin%>">ADMIN</button>
            <% } else { %>
            <button type="submit" formaction="<%=ROUTE.login%>">LOGGA IN</button>
            <button type="submit" formaction="<%=ROUTE.createUser%>">BLI MEDLEM</button>
            <% }%>
        </form>
    </div>
</main>
<%- include ("footer.ejs") %>